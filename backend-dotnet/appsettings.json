{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=database.sqlite"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "http://127.0.0.1:3000"
    ]
  },
  "Excel": {
    "MaxFileSize": 10485760,
    "AllowedExtensions": [".xlsx", ".xls"]
  },
  "Jwt": {
    "Secret": "${JWT_SECRET}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}",
    "ExpireMinutes": "${JWT_EXPIRE_MINUTES}"
  },
  "Security": {
    "EnableRateLimiting": "${ENABLE_RATE_LIMITING}",
    "MaxRequestsPerMinute": "${MAX_REQUESTS_PER_MINUTE}",
    "EnableHttpsRedirect": "${ENABLE_HTTPS_REDIRECT}",
    "RequireHttps": true,
    "PasswordMinLength": 8,
    "PasswordRequireDigit": true,
    "PasswordRequireUppercase": true,
    "PasswordRequireLowercase": true,
    "PasswordRequireNonAlphanumeric": true,
    "PasswordPolicy": {
      "MinimumLength": 8,
      "RequireUppercase": true,
      "RequireLowercase": true,
      "RequireDigit": true,
      "RequireSpecialCharacter": true,
      "MaxFailedAttempts": 5,
      "LockoutMinutes": 15
    },
    "PasswordRequirements": {
      "MinLength": 12,
      "RequireUppercase": true,
      "RequireLowercase": true,
      "RequireNumbers": true,
      "RequireSpecialChars": true,
      "CheckBreachedPasswords": true,
      "MaxFailedAttempts": 5,
      "LockoutDurationMinutes": 15
    },
    "EncryptionKey": "CHANGE_THIS_IN_PRODUCTION_32_CHARS_MIN!",
    "AuditRetentionDays": 365,
    "SecurityMonitoring": {
      "EnableSqlInjectionDetection": true,
      "EnableXssDetection": true,
      "EnableSuspiciousUserAgentDetection": true,
      "MaxFailedAttemptsBeforeBlock": 5,
      "BlockDurationMinutes": 15,
      "LogSecurityEvents": true
    },
    "Session": {
      "SessionTimeoutMinutes": 480,
      "RequireHttps": true,
      "SecureCookies": true
    }
  },
  "RateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*:/api/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      }
    ]
  }
}
