{
  "name": "startingbloch",
  "version": "1.0.0",
  "description": "Votre description de l'application",
  "author": "Votre nom",
  "main": "server.js",
  "scripts": {
    "start": "electron .",
    "build-frontend": "cd ../frontend && npm run build",
    "dist": "npm run build-frontend && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "async": "^3.2.5",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.19.2",
    "express-fileupload": "^1.5.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql": "^2.18.1",
    "mysql2": "^3.11.0",
    "portfinder": "^1.0.32",
    "promise": "^8.3.0",
    "qs": "^6.13.0",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "electron": "^24.8.8",
    "electron-builder": "^23.6.0",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.startingbloch.id",
    "asar": false,
    "productName": "startingbloch",
    "files": [
      "server.js",
      "config.js",
      "controllers/**/*",
      "models/**/*",
      "routes/**/*",
      "package.json",
      "database.sqlite"
    ],
    "extraResources": [
      {
        "from": "../frontend/build/",
        "to": "app/frontend/build/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "deleteAppDataOnUninstall": true
    }
  }
}
